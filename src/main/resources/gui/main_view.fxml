<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rurbisservices.churchdonation.boundary.MainController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Administrare">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#onDonationClick" text="Donații" />
            <MenuItem mnemonicParsing="false" onAction="#onDonationTopicClick" text="Topice donații" />
            <MenuItem mnemonicParsing="false" onAction="#onPeopleClick" text="Enoriași" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#onChurchClick" text="Biserici" />
            <MenuItem mnemonicParsing="false" onAction="#onHouseClick" text="Case" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Rapoarte">
          <MenuItem mnemonicParsing="false" onAction="#onReportsClick" text="Topuri donații" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <MenuItem mnemonicParsing="false" onAction="#onAboutClick" text="Despre Aplicație" />
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane fx:id="anchorPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
    </AnchorPane>
  </children>
</VBox>
